{
  "openapi": "3.0.1",
  "info": {
    "title": "API for technical ecommerce API.",
    "description": "API for products management.",
    "version": "1.0.0",
    "contact": {
      "name": "Jo√£o Araujo",
      "email": "jjvictorac@gmail.com"
    },
    "license": {
      "name": "License: GPLv3",
      "url": "https://www.gnu.org/licenses/gpl-3.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Ecommerce API"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user.",
        "description": "Through this endpoint it is possible to register users on the platform.",
        "requestBody": {
          "description": "The submission format must consist of a name, an email and a password",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email already in use",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Fail"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Fail"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Log with a registered user",
        "description": "Allows access to the platform through a registered user",
        "requestBody": {
          "description": "The submission format must consist of a email and a password",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tokens": {
                      "type": "object",
                      "properties": {
                        "acessToken": {
                          "type": "string"
                        },
                        "refreshToken": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Email or password incorrect",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Fail"
                }
              }
            }
          },
          "422": {
            "description": "Account is blocked. Please try again later. (When many login attempts are unsuccessful, the account is blocked for 5 minutes)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Fail"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Fail": {
        "type": "object",
        "title": "Fail",
        "description": "When the request returns with error",
        "properties": {
          "status": {
            "type": "string"
          },
          "statusCode": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object"
          }
        }
      }
    }
  }
}
